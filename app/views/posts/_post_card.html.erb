<div class="post-card">

  <div class="post-header">

    <div class="username">
      <%= link_to post.user.full_name, user_path(post.user) %> </p>
    </div>

    <div class="edit-delete">
      <% if policy(post).edit? %>
        <div class="btn draw-border">
            <%= link_to "edit post", edit_post_path(post)%>
        </div>
      <% end %>
      <% if policy(post).destroy? %>
        <div class="btn draw-border">
          <%= link_to "delete post", post_path(post), method: :delete  %>
        </div>
      <% end %>
    </div>

  </div>

  <div class="post-time">
    <%= post.created_at.strftime("%b %e, %l:%M %p") %>
  </div>
  <div class="content">
    <p> <%= post.content %></p>
  </div>

  <div class="stats">
    <div class="retweets">
      <p><%= post.retweets %> <i class="fas fa-retweet"></i></p>
    </div>
    <div class="likes">
      <p><%= post.likes %> <i class="far fa-heart"></i></p>
    </div>
  </div>

</div>
